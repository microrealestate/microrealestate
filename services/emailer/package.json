{
  "name": "@microrealestate/emailer",
  "version": "1.0.0",
  "description": "Generates and sends emails",
  "main": "./src/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:types": "rimraf ../../types/dist",
    "clean:common": "rimraf ../typed-common/dist",
    "clean": "npm-run-all clean:types clean:common",
    "transpile:types": "tsc --build ../../types/tsconfig.json",
    "transpile:common": "tsc --build ../typed-common/tsconfig.json",
    "transpile": "npm-run-all transpile:types transpile:common",
    "build": "npm-run-all clean transpile",
    "watch:types": "tsc --build ../../types/tsconfig.json --watch --preserveWatchOutput",
    "watch:common": "tsc --build ../typed-common/tsconfig.json --watch --preserveWatchOutput",
    "watch:service": "nodemon -w src --inspect=0.0.0.0:9228 ./src/index.js",
    "start": "node ./src/index.js",
    "dev": "npm-run-all build --parallel watch:types watch:common watch:service",
    "eslint": "eslint .",
    "lint": "npm-run-all transpile eslint",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css}'"
  },
  "keywords": [
    "email",
    "gmail",
    "mailgun"
  ],
  "author": "Camel Aissani",
  "license": "MIT",
  "dependencies": {
    "@microrealestate/typed-common": "*",
    "axios": "1.6.2",
    "ejs": "3.1.8",
    "form-data": "4.0.0",
    "jsonwebtoken": "9.0.0",
    "locale": "0.1.0",
    "mailgun.js": "8.2.1",
    "moment": "2.29.4",
    "nodemailer": "6.9.0",
    "winston": "2.4.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "nodemon": "2.0.19",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "typescript": "5.3.2"
  }
}
